<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.mytabbedapplication.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_shop"
        android:name="com.example.mytabbedapplication.ui.store.StoreFragment"
        android:label="@string/title_shop"
        tools:layout="@layout/store_fragment" />

    <fragment
        android:id="@+id/navigation_gifts"
        android:name="com.example.mytabbedapplication.ui.gifts.GiftsFragment"
        android:label="@string/title_gifts"
        tools:layout="@layout/gifts_fragment" />

    <fragment
        android:id="@+id/navigation_cart"
        android:name="com.example.mytabbedapplication.ui.cart.CartFragment"
        android:label="@string/title_cart"
        tools:layout="@layout/cart_fragment" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.mytabbedapplication.ui.profile.ProfileFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/profile_fragment" />


</navigation>